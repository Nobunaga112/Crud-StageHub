{% extends 'base.html.twig' %}

{% block title %}Booking Dashboard{% endblock %}

{% block body %}
    <h1 class="page-title">Booking Dashboard</h1>

    <div class="table-container">
        <table class="table">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Customer Name</th>
                    <th>Customer Email</th>
                    <th>Start Date</th>
                    <th>End Date</th>
                    <th>Status</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for booking in bookings %}
                    <tr>
                        <td>{{ loop.index }}</td>
                        <td>{{ booking.CustomerName }}</td>
                        <td>{{ booking.CustomerEmail }}</td>
                        <td>{{ booking.StartDate ? booking.StartDate|date('Y-m-d') : '—' }}</td>
                        <td>{{ booking.EndDate ? booking.EndDate|date('Y-m-d') : '—' }}</td>
                        <td>
                            {% set status = booking.Status|lower %}
                            <span class="status-badge {{ 'status-' ~ status }}">
                                {{ booking.Status }}
                            </span>
                        </td>
                        <td>
                            <a href="{{ path('app_booking_show', {'id': booking.id}) }}" class="btn btn-show">Show</a>
                            <a href="{{ path('app_booking_edit', {'id': booking.id}) }}" class="btn btn-edit">Edit</a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="7">No records found</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>

    <div class="action-bar">
        <a href="{{ path('app_booking_new') }}" class="btn btn-create">Create new</a>
    </div>
{% endblock %}
