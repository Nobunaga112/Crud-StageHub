{% extends 'base.html.twig' %}

{% block title %}Booking{% endblock %}

{% block body %}
    <h1>Booking</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ booking.id }}</td>
            </tr>
            <tr>
                <th>Customer_Name</th>
                <td>{{ booking.CustomerName }}</td>
            </tr>
            <tr>
                <th>Customer_Email</th>
                <td>{{ booking.CustomerEmail }}</td>
            </tr>
            <tr>
                <th>Start_Date</th>
                <td>{{ booking.StartDate ? booking.StartDate|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>End_Date</th>
                <td>{{ booking.EndDate ? booking.EndDate|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Status</th>
                <td>{{ booking.Status }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_booking_index') }}">back to list</a>

    <a href="{{ path('app_booking_edit', {'id': booking.id}) }}">edit</a>

    {{ include('booking/_delete_form.html.twig') }}
{% endblock %}
