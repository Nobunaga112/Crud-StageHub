{% extends 'base.html.twig' %}

{% block title %}Booking Details{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/show-equipment.css') }}">
{% endblock %}

{% block body %}
<!-- Modal Overlay -->
<div class="modal-overlay">
  <div class="modal-container">

    <!-- Modal Header -->
    <div class="modal-header">
      <h2 class="modal-title">Booking Details</h2>
      <button class="modal-close-button" id="close-modal">
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12" />
        </svg>
      </button>
    </div>

    <!-- Modal Body -->
    <div class="modal-body">
      
      <!-- Booking Header Info -->
      <div class="equipment-info-header">
        <h3 class="equipment-name">{{ booking.CustomerName }}</h3>
        <p class="equipment-id">Booking #{{ bookingDisplayNumber }}</p>
      </div>

      <!-- Booking Details -->
      <div class="details-section">
        <dl class="details-grid">
          <div>
            <dt class="detail-term">Customer Email</dt>
            <dd class="detail-description">{{ booking.CustomerEmail }}</dd>
          </div>

          <div>
            <dt class="detail-term">Start Date</dt>
            <dd class="detail-description">{{ booking.StartDate ? booking.StartDate|date('Y-m-d') : '' }}</dd>
          </div>

          <div>
            <dt class="detail-term">End Date</dt>
            <dd class="detail-description">{{ booking.EndDate ? booking.EndDate|date('Y-m-d') : '' }}</dd>
          </div>

          <div>
            <dt class="detail-term">Equipment</dt>
            <dd class="detail-description">
              {% if booking.Equipment %}
                {{ booking.Equipment.equipmentType }}: {{ booking.Equipment.equipment }}
                <br>
                <small class="text-muted">
                  Price: ₱{{ booking.Equipment.price|number_format(2, '.', ',') }}
                </small>
              {% else %}
                <span class="text-muted">No equipment</span>
              {% endif %}
            </dd>
          </div>

          <div>
            <dt class="detail-term">Status</dt>
            <dd>
              {% set status = booking.Status|lower %}
              <span class="status-badge {{ 'status-' ~ status }}">
                {{ booking.Status }}
              </span>
            </dd>
          </div>
        </dl>
      </div>

      <!-- Modal Footer -->
      <div class="modal-footer">
        <a href="{{ path('app_booking_index') }}" class="modal-action-button">
          Close
        </a>
        <a href="{{ path('app_booking_edit', {'id': booking.id}) }}" class="modal-action-button">
          Edit
        </a>
      </div>

    </div>
  </div>
</div>

<script>
document.addEventListener("DOMContentLoaded", () => {
  const modalOverlay = document.querySelector(".modal-overlay");
  const closeButton = document.querySelector(".modal-close-button");

  // ✅ Smoothly fade in modal
  requestAnimationFrame(() => {
    modalOverlay.classList.add("active");
  });

  // ✅ Instantly close when clicking close button
  closeButton.addEventListener("click", (e) => {
    e.preventDefault();
    window.location.href = "{{ path('app_booking_index') }}";
  });
});
</script>
{% endblock %}