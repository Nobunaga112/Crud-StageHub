{% extends 'website/base.html.twig' %}

{% block title %}Welcome to StageHub{% endblock %}

{% block body %}
<div class="home-page">
  <!-- ================= HERO SECTION ================= -->
  <section id="hero" class="hero-section d-flex align-items-center justify-content-center text-center">
    <div class="hero-content text-white">
      <h1 class="display-3 fw-bold" style="font-family:'Rubik One';">
        Rent Smarter. Stage Better.
      </h1>
      <p class="lead mb-4" style="max-width: 700px; margin: auto;">
        Modern, efficient event equipment rentals made simple â€” book, manage, and return your gear with ease.
      </p>
      <a href="#featured-equipment" class="btn btn-teal px-4 py-2">Explore Equipment</a>
    </div>
  </section>

<!-- ================= FEATURED EQUIPMENT ================= -->
<section id="featured-equipment" class="featured-section py-5">
  <div class="container">
    <h2 class="section-title text-center mb-5">Featured Equipment</h2>

    <div class="row text-center justify-content-center">
      <div class="col-md-3 mb-4">
        <div class="card equipment-card">
          <img src="{{ asset('images/lighting.jpg') }}" alt="Lighting" class="card-img-top">
          <div class="card-body">
            <h6 class="equipment-type">Lighting</h6>
            <h5 class="fw-bold">Professional Stage Lighting</h5>
            <p>Create stunning visual effects for concerts and events.</p>
          </div>
        </div>
      </div>

      <div class="col-md-3 mb-4">
        <div class="card equipment-card">
          <img src="{{ asset('images/sound.jpg') }}" alt="Sound System" class="card-img-top">
          <div class="card-body">
            <h6 class="equipment-type">Sound System</h6>
            <h5 class="fw-bold">High-Quality Sound Systems</h5>
            <p>Immerse your audience with crystal-clear audio performance.</p>
          </div>
        </div>
      </div>

      <div class="col-md-3 mb-4">
        <div class="card equipment-card">
          <img src="{{ asset('images/stage.jpg') }}" alt="Stage" class="card-img-top">
          <div class="card-body">
            <h6 class="equipment-type">Stage</h6>
            <h5 class="fw-bold">Versatile Stage Platforms</h5>
            <p>Customize your stage layout with sturdy modular platforms.</p>
          </div>
        </div>
      </div>

      <div class="col-md-3 mb-4">
        <div class="card equipment-card">
          <img src="{{ asset('images/visuals.jpg') }}" alt="Visual Equipment" class="card-img-top">
          <div class="card-body">
            <h6 class="equipment-type">Visual Equipment</h6>
            <h5 class="fw-bold">Advanced Video Projection</h5>
            <p>Enhance your show with vibrant LED and projection visuals.</p>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<!-- ================= EQUIPMENT CATEGORIES ================= -->
<section id="equipment-categories" class="categories-section py-5">
  <div class="container">
    <h2 class="section-title text-center mb-5">Equipment Categories</h2>

    <div class="row text-center justify-content-center">
      {% set categories = ['Lighting', 'Sound System', 'Stage', 'Visuals / LED Wall', 'Special Effects'] %}
      {% for category in categories %}
        <div class="col-md-2 col-sm-4 mb-4">
          <div class="card equipment-card d-flex align-items-center justify-content-center">
            <div class="card-body">
              <h6 class="fw-bold">{{ category }}</h6>
            </div>
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
</section>

{% endblock %}
