                        var amountMatch = amountCell.match(/\$?([\d,]+\.?\d*)/);
                        if (!amountMatch) return false;
                        
                        var amount = parseFloat(amountMatch[1].replace(',', ''));
                        
                        return amount >= minAmount && amount <= maxAmount;
                    }
                );
