{% extends 'base.html.twig' %}

{% block title %}Payment{% endblock %}

{% block body %}
    <h1>Payment</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ payment.id }}</td>
            </tr>
            <tr>
                <th>Amount</th>
                <td>{{ payment.Amount }}</td>
            </tr>
            <tr>
                <th>Method</th>
                <td>{{ payment.Method }}</td>
            </tr>
            <tr>
                <th>Status</th>
                <td>{{ payment.Status }}</td>
            </tr>
            <tr>
                <th>Payment_Date</th>
                <td>{{ payment.PaymentDate ? payment.PaymentDate|date('Y-m-d') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_payment_index') }}">back to list</a>

    <a href="{{ path('app_payment_edit', {'id': payment.id}) }}">edit</a>

    {{ include('payment/_delete_form.html.twig') }}
{% endblock %}
