{# templates/equipment/dashboard.html.twig #}

{% extends 'base.html.twig' %}

{% block title %}Equipment Dashboard{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/main-dashboard.css') }}">

    {# ‚úÖ DataTables CSS #}
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.6/css/jquery.dataTables.min.css">
    <link rel="stylesheet" href="https://cdn.datatables.net/responsive/2.5.0/css/responsive.dataTables.min.css">
{% endblock %}

{% block body %}
<div class="main-content">
    <h1 class="dashboard-title">Admin Dashboard</h1>

    {# --- Stats Section --- #}
    <div class="dashboard-stats-grid">
        <div class="stat-card">
            <h3>Total Users</h3>
            <p>{{ total_users }}</p>
        </div>
        <div class="stat-card">
            <h3>Active Rentals</h3>
            <p>{{ active_rentals }}</p>
        </div>
        <div class="stat-card">
            <h3>Pending Rentals</h3>
            <p>{{ pending_rentals }}</p>
        </div>
        <div class="stat-card">
            <h3>Completed Rentals</h3>
            <p>{{ completed_rentals }}</p>
        </div>
        <div class="stat-card">
            <h3>Rental Sales</h3>
            <p>${{ rental_sales|number_format(2, '.', ',') }}</p>
        </div>
    </div>

    {# --- Equipment Inventory (DataTable) --- #}
    <div class="dashboard-section">
        <div class="section-header">
            <h2>Equipment Inventory</h2>
            <p class="section-subtitle">Monitor and manage all available equipment in the system</p>
        </div>

        <div class="table-container">
            <table id="equipmentTable" class="display nowrap" style="width:100%">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Type</th>
                        <th>Name</th>
                        <th>Price</th>
                        <th>Availability</th>
                    </tr>
                </thead>
                <tbody>
                    {% for item in equipmentList %}
                        <tr>
                            <td>{{ loop.index }}</td>
                            <td>{{ item.equipmentType }}</td>
                            <td>{{ item.equipment }}</td>
                            <td>${{ item.price|number_format(2, '.', ',') }}</td>
                            <td>
                                {% if item.availability %}
                                    <span class="status available">Available</span>
                                {% else %}
                                    <span class="status unavailable">Unavailable</span>
                                {% endif %}
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="5" class="text-center text-muted">No equipment found</td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>

    {# --- Latest Bookings --- #}
    <div class="dashboard-section">
        <h2>Latest Bookings</h2>
        <div class="table-responsive">
            <table class="table align-middle mb-0">
                <thead>
                    <tr class="text-muted small">
                        <th>Order ID</th>
                        <th>Customer</th>
                        <th>Equipment</th>
                        <th>Status</th>
                        <th>Start Date</th>
                        <th>End Date</th>
                    </tr>
                </thead>
                <tbody>
                    {% for booking in latest_bookings %}
                        <tr>
                            <td class="fw-semibold">{{ booking.id }}</td>
                            <td>{{ booking.customer }}</td>
                            <td>{{ booking.equipment }}</td>
                            <td>
                                {% if booking.status == 'Pending' %}
                                    <span class="badge bg-warning text-dark">Pending</span>
                                {% elseif booking.status == 'Approved' %}
                                    <span class="badge bg-success">Approved</span>
                                {% elseif booking.status == 'Completed' %}
                                    <span class="badge bg-secondary">Completed</span>
                                {% else %}
                                    <span class="badge bg-light text-dark">{{ booking.status }}</span>
                                {% endif %}
                            </td>
                            <td>{{ booking.startDate }}</td>
                            <td>{{ booking.endDate }}</td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="6" class="text-center text-muted py-4">No recent bookings found</td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
</div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/responsive/2.5.0/js/dataTables.responsive.min.js"></script>

    <script>
        $(document).ready(function() {
            $('#equipmentTable').DataTable({
                responsive: true,
                pageLength: 5,
                lengthMenu: [5, 10, 20],
                order: [[0, 'asc']],
                language: {
                    search: "",
                    searchPlaceholder: "Search equipment...",
                    lengthMenu: "_MENU_ per page",
                    info: "Showing _START_‚Äì_END_ of _TOTAL_ items",
                },
                dom: '<"top"lf>rt<"bottom"ip><"clear">',
            });

            // Custom styling for search input
            $('.dataTables_filter input')
                .addClass('search-input')
                .attr('placeholder', 'üîç Search equipment...');
        });
    </script>
{% endblock %}
