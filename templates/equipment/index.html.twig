{% extends 'base.html.twig' %}

{% block title %}Equipment Dashboard{% endblock %}

{% block body %}
    <h1 class="page-title">Equipment Dashboard</h1>

    <div class="table-container">
        <table class="table">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Equipment Type</th>
                    <th>Equipment</th>
                    <th>Availability</th>
                    <th>Price</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for equipment in equipment %}
                    <tr>
                        <td>{{ loop.index }}</td>
                        <td>{{ equipment.equipmentType }}</td>
                        <td>{{ equipment.equipment }}</td>
                        <td>{{ equipment.availability ? 'Yes' : 'No' }}</td>
                        <td>{{ equipment.price }}</td>
                        <td>
                            <a href="{{ path('app_equipment_show', {'id': equipment.id}) }}" class="btn btn-show">Show</a>
                            <a href="{{ path('app_equipment_edit', {'id': equipment.id}) }}" class="btn btn-edit">Edit</a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="6">No records found</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>

    <div class="action-bar">
        <a href="{{ path('app_equipment_new') }}" class="btn btn-create">Create new</a>
    </div>
{% endblock %}
