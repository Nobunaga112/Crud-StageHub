{% extends 'base.html.twig' %}

{% block title %}Equipment Details{% endblock %}

{% block body %}
<h1 class="page-title">Equipment Details</h1>

<div class="table-container details-card">
    <h2>Equipment Information</h2>

    <div class="details-row">
        <span><strong>Equipment Type</strong></span>
        <span>{{ equipment.equipmentType }}</span>
    </div>

    <div class="details-row">
        <span><strong>Equipment Name</strong></span>
        <span>{{ equipment.equipment }}</span>
    </div>

    <div class="details-row">
        <span><strong>Availability</strong></span>
        <span>{{ equipment.availability ? 'Available' : 'Not Available' }}</span>
    </div>

    <div class="details-row">
        <span><strong>Price</strong></span>
        <span>${{ equipment.price }}</span>
    </div>
</div>

<div class="action-bar">
    <a href="{{ path('app_equipment_index') }}" class="btn btn-back">
        ‚Üê Back to Dashboard
    </a>

    <a href="{{ path('app_equipment_edit', {'id': equipment.id}) }}" class="btn btn-edit">
        Edit
    </a>

    {{ include('equipment/_delete_form.html.twig') }}
</div>
{% endblock %}
