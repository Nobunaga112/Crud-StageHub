{% extends 'base.html.twig' %}

{% block title %}Edit Equipment{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/equipment_edit.css') }}?v={{ date().timestamp }}">
{% endblock %}

{% block body %}
    <h1 class="page-title">Edit Equipment</h1>

    <div class="edit-form-container">
        {{ form_start(form) }}

        <div class="form-group">
            {{ form_label(form.Equipment_Type, 'Equipment Type') }}
            {{ form_widget(form.Equipment_Type) }}
        </div>

        <div class="form-group">
            {{ form_label(form.Equipment, 'Equipment Name') }}
            {{ form_widget(form.Equipment) }}
        </div>

        <div class="form-group">
            {{ form_label(form.Availability, 'Availability') }}
            {{ form_widget(form.Availability) }}
        </div>

        <div class="form-group">
            {{ form_label(form.Price, 'Price ($)') }}
            {{ form_widget(form.Price) }}
        </div>

        <div class="form-actions">
            <a href="{{ path('app_equipment_index') }}" class="btn btn-cancel">Cancel</a>
            <button class="btn btn-update">{{ button_label|default('Update') }}</button>
        </div>

        {{ form_end(form) }}
    </div>

    <div class="action-bar">
        {{ include('equipment/_delete_form.html.twig') }}
    </div>
{% endblock %}
