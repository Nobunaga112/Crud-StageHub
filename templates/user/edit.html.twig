{% extends 'base.html.twig' %}

{% block title %}Edit User{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .modal-overlay {
            position: fixed;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background-color: rgba(0, 0, 0, 0.5);
            display: flex;
            align-items: center;
            justify-content: center;
            z-index: 1000;
            opacity: 0;
            visibility: hidden;
            transition: opacity 0.3s ease, visibility 0.3s ease;
            padding: 20px;
        }

        .modal-overlay.active {
            opacity: 1;
            visibility: visible;
        }

        .modal-container {
            background: white;
            border-radius: 12px;
            width: 100%;
            max-width: 700px;
            max-height: 90vh;
            display: flex;
            flex-direction: column;
            box-shadow: 0 20px 60px rgba(0, 0, 0, 0.3);
            transform: translateY(20px);
            transition: transform 0.3s ease;
        }

        .modal-overlay.active .modal-container {
            transform: translateY(0);
        }

        .modal-header {
            padding: 24px 32px;
            border-bottom: 1px solid #e5e7eb;
            display: flex;
            align-items: center;
            justify-content: space-between;
        }

        .modal-title {
            font-size: 24px;
            font-weight: 600;
            color: #111827;
            margin: 0;
        }

        .modal-close-button {
            background: none;
            border: none;
            cursor: pointer;
            padding: 8px;
            border-radius: 6px;
            transition: background-color 0.2s;
        }

        .modal-close-button:hover {
            background-color: #f3f4f6;
        }

        .modal-close-button svg {
            width: 24px;
            height: 24px;
            stroke: #6b7280;
        }

        .modal-body {
            padding: 32px;
            flex: 1;
            overflow-y: auto;
        }

        .modal-footer {
            padding: 24px 32px;
            border-top: 1px solid #e5e7eb;
            display: flex;
            justify-content: flex-end;
            gap: 12px;
        }

        .modal-action-button {
            padding: 10px 20px;
            border-radius: 6px;
            font-weight: 500;
            font-size: 14px;
            text-decoration: none;
            cursor: pointer;
            transition: all 0.2s;
            border: 1px solid transparent;
        }

        .btn-cancel {
            background-color: white;
            color: #6b7280;
            border: 1px solid #d1d5db;
        }

        .btn-cancel:hover {
            background-color: #f9fafb;
            border-color: #9ca3af;
        }

        .btn-update {
            background-color: #10b981;
            color: white;
            border: none;
        }

        .btn-update:hover {
            background-color: #059669;
        }

        /* Form styling */
        .form-container {
            width: 100%;
        }

        .form-group {
            margin-bottom: 24px;
        }

        .form-label {
            display: block;
            margin-bottom: 8px;
            font-weight: 500;
            color: #374151;
            font-size: 14px;
        }

        .form-input {
            width: 100%;
            padding: 10px 12px;
            border: 1px solid #d1d5db;
            border-radius: 6px;
            font-size: 14px;
            transition: border-color 0.2s;
        }

        .form-input:focus {
            outline: none;
            border-color: #3b82f6;
            box-shadow: 0 0 0 3px rgba(59, 130, 246, 0.1);
        }

        .form-select {
            width: 100%;
            padding: 10px 12px;
            border: 1px solid #d1d5db;
            border-radius: 6px;
            font-size: 14px;
            background-color: white;
            transition: border-color 0.2s;
        }

        .form-select:focus {
            outline: none;
            border-color: #3b82f6;
            box-shadow: 0 0 0 3px rgba(59, 130, 246, 0.1);
        }

        .form-checkbox-group {
            display: flex;
            flex-wrap: wrap;
            gap: 16px;
            margin-top: 8px;
        }

        .checkbox-container {
            display: flex;
            align-items: center;
            gap: 8px;
        }

        .checkbox-input {
            width: 16px;
            height: 16px;
            border-radius: 4px;
            border: 1px solid #d1d5db;
        }

        .checkbox-label {
            font-size: 14px;
            color: #374151;
        }

        .form-error {
            color: #dc2626;
            font-size: 12px;
            margin-top: 4px;
        }

        .form-row {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
            gap: 20px;
        }

        .required-field::after {
            content: " *";
            color: #dc2626;
        }

        .password-note {
            font-size: 12px;
            color: #6b7280;
            margin-top: 4px;
            font-style: italic;
        }
    </style>
{% endblock %}

{% block body %}
<!-- Edit User Modal -->
<div class="modal-overlay" id="edit-user-modal">
  <div class="modal-container">

    <!-- Modal Header -->
    <div class="modal-header">
      <h2 class="modal-title">Edit User: {{ user.firstName }} {{ user.lastName }}</h2>
      <button class="modal-close-button" type="button" onclick="closeEditModal()">
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12" />
        </svg>
      </button>
    </div>

    <!-- Modal Body -->
    <div class="modal-body">
      <div class="form-container">
        {{ form_start(form, {'attr': {'id': 'edit-user-form', 'class': 'user-form'}}) }}
        
        <div class="form-row">
          <div class="form-group">
            {{ form_label(form.firstName, 'First Name', {'label_attr': {'class': 'form-label required-field'}}) }}
            {{ form_widget(form.firstName, {'attr': {'class': 'form-input', 'placeholder': 'Enter first name'}}) }}
            {{ form_errors(form.firstName) }}
          </div>

          <div class="form-group">
            {{ form_label(form.lastName, 'Last Name', {'label_attr': {'class': 'form-label required-field'}}) }}
            {{ form_widget(form.lastName, {'attr': {'class': 'form-input', 'placeholder': 'Enter last name'}}) }}
            {{ form_errors(form.lastName) }}
          </div>
        </div>

        <div class="form-row">
          <div class="form-group">
            {{ form_label(form.email, 'Email', {'label_attr': {'class': 'form-label required-field'}}) }}
            {{ form_widget(form.email, {'attr': {'class': 'form-input', 'placeholder': 'Enter email address'}}) }}
            {{ form_errors(form.email) }}
          </div>

          <div class="form-group">
            {{ form_label(form.username, 'Username', {'label_attr': {'class': 'form-label required-field'}}) }}
            {{ form_widget(form.username, {'attr': {'class': 'form-input', 'placeholder': 'Enter username'}}) }}
            {{ form_errors(form.username) }}
          </div>
        </div>

        <div class="form-row">
          <div class="form-group">
            {{ form_label(form.plainPassword, 'Password', {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(form.plainPassword, {
                'attr': {
                    'class': 'form-input', 
                    'placeholder': 'Leave empty to keep current password',
                    'autocomplete': 'new-password'
                }
            }) }}
            <div class="password-note">Leave blank to keep current password</div>
            {{ form_errors(form.plainPassword) }}
          </div>

          <div class="form-group">
            {{ form_label(form.status, 'Status', {'label_attr': {'class': 'form-label required-field'}}) }}
            {{ form_widget(form.status, {'attr': {'class': 'form-select'}}) }}
            {{ form_errors(form.status) }}
          </div>
        </div>

        <div class="form-group">
          {{ form_label(form.roles, 'Roles', {'label_attr': {'class': 'form-label required-field'}}) }}
          <div class="form-checkbox-group">
            {% for role in form.roles %}
              <div class="checkbox-container">
                {{ form_widget(role, {'attr': {'class': 'checkbox-input'}}) }}
                {{ form_label(role, null, {'label_attr': {'class': 'checkbox-label'}}) }}
              </div>
            {% endfor %}
          </div>
          {{ form_errors(form.roles) }}
        </div>

        {{ form_rest(form) }}

        <!-- Modal Footer -->
        <div class="modal-footer">
          <button type="button" class="modal-action-button btn-cancel" onclick="closeEditModal()">
            Cancel
          </button>
          <button type="submit" class="modal-action-button btn-update">
            Update User
          </button>
        </div>

        {{ form_end(form) }}
      </div>
    </div>
  </div>
</div>

<script>
document.addEventListener("DOMContentLoaded", () => {
  const modal = document.getElementById("edit-user-modal");
  
  // Smoothly show modal
  requestAnimationFrame(() => {
    modal.classList.add("active");
  });

  // Clear password field on page load to ensure it's empty
  const passwordField = document.querySelector('#edit-user-form input[type="password"]');
  if (passwordField) {
    passwordField.value = '';
  }
});

function closeEditModal() {
  window.location.href = "{{ path('user_index') }}";
}

// Handle escape key
document.addEventListener("keydown", (e) => {
  if (e.key === "Escape") {
    closeEditModal();
  }
});
</script>
{% endblock %}